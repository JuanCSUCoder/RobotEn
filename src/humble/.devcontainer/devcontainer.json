{
    "name": "ROS 2 Development Container",
    // "privileged": true,
    "remoteUser": "rosuser",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "rosuser"
        }
    },
    "workspaceFolder": "/home/ws",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--network", "host",

        "-e", "DISPLAY=${env:DISPLAY}",

        "--device", "/dev/snd",
		"--device", "/dev/dri",
		"--gpus", "all"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
        "source=/dev/snd,target=/dev/snd,type=bind,consistency=cached",
        "source=${env:HOME}/.Xauthority,target=/home/rosuser/.Xauthority,type=bind"
    ],
    "postCreateCommand": "rosdep update && rosdep install --from-paths src --ignore-src -y && sudo chown -R rosuser /home/ws/"
}